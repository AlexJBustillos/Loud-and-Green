<div class="header">
    <h1><%= strain.name %> </h1>
</div>

<div class="container">
    <p><i>Race:</i> <%= strain.race.toUpperCase() %> </p><br>
    <p><i>Description:</i> <%= strain.description %> </p><br>
    <p><i>Flavor 🎶 's:</i> <%= flavors %> </p><br>
    <% effects.forEach(effect => { %>
        <p><i>Pros ✅ : </i><%= effect.positive %> </p><br>
        <p><i>Cons 🚫 : </i><%= effect.negative %> </p><br>
        <p><i>Helps with 🏥 : </i><%= effect.medical %> </p><br>
    <% }) %>
    <a HREF="javascript:javascript:history.go(-1)">🔙 </a>
    <form method="POST" action="/profile">
        <input  type="hidden" name="strainId" value="<%= strain.strainId %> ">
        <input type="hidden" name="name" value="<%= strain.name %> ">
        <input type="hidden" name="race" value="<%= strain.race %> ">
        <input type="hidden" name="description" value="<%= strain.description %> ">
        <input type="hidden" name="userId" value="<%= currentUser.id %> ">
        <button type="submit">Add to your profile</button>
    </form> 
</div>
